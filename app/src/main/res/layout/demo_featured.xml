<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_150mdp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5mdp"
    app:cardCornerRadius="@dimen/_5mdp"
    android:background="@drawable/back_white_border_grey">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_105mdp"
            android:scaleType="center"
            android:src="@drawable/placeholder"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dark_grey_cornrs"
            android:paddingStart="@dimen/_10mdp"
            android:paddingEnd="@dimen/_5mdp"
            android:text="10% Off"
            android:textStyle="bold"
            android:textColor="@color/darkGray"
            android:textSize="@dimen/_9font_mdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10mdp"
            app:layout_constraintTop_toBottomOf="@+id/imageView">

            <View
                android:layout_width="@dimen/_50mdp"
                android:layout_height="@dimen/_10mdp"
                android:layout_weight="1"
                android:background="@color/gray"
                android:textSize="@dimen/_11font_mdp"
                android:textColor="@color/black"
                android:text="Sk Sultan Ali, 721137"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/_5mdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/star1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:tint="@color/darkGray"
                    android:src="@drawable/star_half_24" />

                <ImageView
                    android:id="@+id/star2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:tint="@color/darkGray"
                    android:src="@drawable/star_half_24" />

                <ImageView
                    android:id="@+id/star3"
                    android:layout_width="wrap_content"
                    android:visibility="visible"
                    app:tint="@color/darkGray"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_half_24" />

                <ImageView
                    android:id="@+id/star4"
                    android:visibility="visible"
                    app:tint="@color/darkGray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_half_24" />

                <ImageView
                    android:id="@+id/star5"
                    android:visibility="visible"
                    app:tint="@color/darkGray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_half_24" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_10mdp"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/_15mdp"
                        android:background="@color/darkGray"
                        android:textSize="@dimen/_11font_mdp"
                        android:textColor="@color/black"
                        android:text="Sk Sultan Ali, 721137"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10mdp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_5mdp"
                android:layout_marginEnd="@dimen/_15mdp"
                android:background="@color/darkGray"
                android:textSize="@dimen/_11font_mdp"
                android:textColor="@color/darkGray"
                android:text="Sk Sultan Ali, 721137"/>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>