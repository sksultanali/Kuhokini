<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_5mdp"
    android:background="@drawable/back_white_border_grey_corner"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/_10mdp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/proName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/darkGray"
            android:singleLine="true"
            android:text="Customer Namegfdgfdgfdgfdgfdgfdgfdgfdgfdgdgfdgfdgfd Customer Namegfdgfdgfdgfdgfdgfdgfdgfdgfdgdgfdgfdgfd"
            android:background="@color/darkGray"
            android:textStyle="bold"
            android:textSize="@dimen/_11font_mdp"/>
        <TextView
            android:id="@+id/cusName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5mdp"
            android:textColor="@color/gray"
            android:background="@color/gray"
            android:singleLine="true"
            android:text="Product Name And Nothing More"
            android:textSize="@dimen/_11font_mdp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10mdp"
            android:layout_marginTop="@dimen/_5mdp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                app:tint="@color/gray"
                android:src="@drawable/star_14"/>
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                app:tint="@color/gray"
                android:src="@drawable/star_14"/>
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                app:tint="@color/darkGray"
                android:src="@drawable/star_14"/>
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                app:tint="@color/darkGray"
                android:src="@drawable/star_14"/>
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                app:tint="@color/darkGray"
                android:src="@drawable/star_14"/>
        </LinearLayout>
        <TextView
            android:id="@+id/dateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5mdp"
            android:text="Review Text...."
            android:background="@color/darkGray"
            android:textColor="@color/darkGray"
            android:textSize="@dimen/_10font_mdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5mdp"
            android:gravity="end"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:text="Public"
                android:paddingStart="@dimen/_5mdp"
                android:paddingTop="@dimen/_2mdp"
                android:paddingEnd="@dimen/_5mdp"
                android:paddingBottom="@dimen/_2mdp"
                android:background="@drawable/bg_grey_grey"
                android:textStyle="bold"
                android:textSize="@dimen/_9font_mdp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>