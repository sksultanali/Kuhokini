<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/login_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10mdp"
        android:gravity="center"
        android:background="@drawable/bg_gradiant"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/_16mdp"
            android:layout_height="@dimen/_16mdp"
            app:tint="@color/icon_color"
            android:visibility="invisible"
            android:src="@drawable/close_24"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add New Address"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:paddingStart="@dimen/_5mdp"
                android:paddingEnd="@dimen/_5mdp"
                android:background="@drawable/bg_blue_purple_corners"
                android:textSize="@dimen/_11font_mdp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/subTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Be Sure About Delivery Address"
                android:visibility="visible"
                android:layout_marginTop="@dimen/_2mdp"
                android:textSize="@dimen/_10font_mdp"
                android:textColor="@color/black"
                android:layout_gravity="center"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/closeBtn"
            android:layout_width="@dimen/_16mdp"
            android:layout_height="@dimen/_16mdp"
            app:tint="@color/black"
            android:src="@drawable/close_24"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_8mdp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/child_category"
            app:spanCount="5"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"/>
        <LinearLayout
            android:id="@+id/noData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/_30mdp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/bottomPrice"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/cartList"
            app:layout_constraintTop_toBottomOf="@id/cartActionBar">
            <ImageView
                android:layout_width="@dimen/_80mdp"
                android:layout_height="@dimen/_80mdp"
                android:src="@drawable/no_image" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Sub Category Found!"
                android:layout_marginTop="@dimen/_2mdp"
                android:textSize="@dimen/_10font_mdp"
                android:layout_gravity="center"
                android:textColor="@color/black"/>
        </LinearLayout>
        <ProgressBar
            android:id="@+id/loadMore"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_60mdp"
            android:layout_marginBottom="@dimen/_60mdp"
            android:visibility="gone"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/addNewAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10mdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1mdp"
                    android:layout_weight="1"
                    android:background="@color/darkGray"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_11font_mdp"
                    android:text="or"
                    android:layout_marginStart="@dimen/_10mdp"
                    android:layout_marginEnd="@dimen/_10mdp"
                    android:textColor="@color/black"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1mdp"
                    android:layout_weight="1"
                    android:background="@color/darkGray"/>
            </LinearLayout>
            <Button
                android:id="@+id/addNewAddressBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10mdp"
                android:layout_marginBottom="@dimen/_10mdp"
                android:text="Add New Address"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>