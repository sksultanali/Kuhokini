<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back_white_border_grey">


    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_105mdp"
        app:iss_auto_cycle="true"
        app:iss_corner_radius="6"
        app:iss_delay="0"
        app:iss_selected_dot="@color/transparentColor"
        app:iss_unselected_dot="@color/transparentColor"
        app:iss_error_image="@drawable/placeholder"
        app:iss_period="800"
        app:iss_placeholder="@color/black"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/offer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6mdp"
        android:background="@drawable/text_background"
        android:paddingStart="@dimen/_10mdp"
        android:paddingTop="@dimen/_2mdp"
        android:paddingEnd="@dimen/_5mdp"
        android:paddingBottom="@dimen/_2mdp"
        android:text="10% Off"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="@dimen/_9font_mdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10mdp"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textColor="@color/black"
            android:textSize="@dimen/_11font_mdp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/star1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@drawable/star_14" />

            <ImageView
                android:id="@+id/star2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@drawable/star_14" />

            <ImageView
                android:id="@+id/star3"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:src="@drawable/star_14" />

            <ImageView
                android:id="@+id/star4"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_14" />

            <ImageView
                android:id="@+id/star5"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_14" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 Reviews"
                    android:paddingStart="@dimen/_5mdp"
                    android:paddingEnd="@dimen/_5mdp"
                    android:textSize="@dimen/_11font_mdp" />
            </LinearLayout>
        </LinearLayout>
<!--        <TextView-->
<!--            android:id="@+id/variantsInfo"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="0 Variants"-->
<!--            android:layout_marginTop="@dimen/_5mdp"-->
<!--            android:textSize="@dimen/_11font_mdp" />-->

        <TextView
            android:id="@+id/deliveryRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery Rate"
            android:layout_marginTop="@dimen/_5mdp"
            android:textSize="@dimen/_11font_mdp" />
<!--        <TextView-->
<!--            android:id="@+id/extraInfo"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="NA"-->
<!--            android:textColor="@color/black"-->
<!--            android:textSize="@dimen/_11font_mdp" />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginTop="@dimen/_5mdp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/sellingPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NA"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_11font_mdp" />
            <TextView
                android:id="@+id/normalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5mdp"
                android:text="NA"
                android:textColor="@color/black"
                android:textSize="@dimen/_9font_mdp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add to Cart"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_10mdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_11font_mdp"
            android:paddingStart="@dimen/_8mdp"
            android:paddingEnd="@dimen/_8mdp"
            android:paddingTop="@dimen/_5mdp"
            android:paddingBottom="@dimen/_5mdp"
            android:background="@drawable/click_effect_main"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/wishList"
        android:layout_width="@dimen/_20mdp"
        android:layout_height="@dimen/_20mdp"
        android:layout_margin="@dimen/_10mdp"
        android:src="@drawable/favorite_border_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>