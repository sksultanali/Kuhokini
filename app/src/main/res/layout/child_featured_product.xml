<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_150mdp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5mdp"
    app:cardCornerRadius="@dimen/_10mdp"
    android:background="@drawable/back_white_border_grey">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_105mdp"
            app:iss_auto_cycle="true"
            app:iss_corner_radius="6"
            app:iss_delay="0"
            app:iss_selected_dot="@color/transparentColor"
            app:iss_unselected_dot="@color/transparentColor"
            app:iss_error_image="@drawable/placeholder"
            app:iss_period="800"
            app:iss_placeholder="@color/black"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6mdp"
            android:background="@drawable/text_background"
            android:paddingStart="@dimen/_10mdp"
            android:paddingTop="@dimen/_2mdp"
            android:paddingEnd="@dimen/_5mdp"
            android:paddingBottom="@dimen/_2mdp"
            android:text="10% Off"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/_9font_mdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10mdp"
            app:layout_constraintTop_toBottomOf="@+id/imageView">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textColor="@color/black"
                android:textSize="@dimen/_11font_mdp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/star1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:src="@drawable/star_14" />

                <ImageView
                    android:id="@+id/star2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:src="@drawable/star_14" />

                <ImageView
                    android:id="@+id/star3"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_14" />

                <ImageView
                    android:id="@+id/star4"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_14" />

                <ImageView
                    android:id="@+id/star5"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_14" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 Reviews"
                        android:paddingStart="@dimen/_5mdp"
                        android:paddingEnd="@dimen/_5mdp"
                        android:textSize="@dimen/_11font_mdp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/sellingPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NA"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11font_mdp" />
                <TextView
                    android:id="@+id/normalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5mdp"
                    android:text="NA"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9font_mdp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>