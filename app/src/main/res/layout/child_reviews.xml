<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5mdp"
    android:background="@drawable/back_white_border_grey_corner"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/_10mdp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/proName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Customer Name"
            android:textStyle="bold"
            android:textSize="@dimen/_11font_mdp"/>
        <TextView
            android:id="@+id/cusName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="@dimen/_11font_mdp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10mdp"
            android:layout_marginTop="@dimen/_5mdp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/star_14"/>
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/star_14"/>
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/star_14"/>
        </LinearLayout>
        <TextView
            android:id="@+id/dateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTint="@color/icon_color"
            android:drawablePadding="@dimen/_5mdp"
            android:drawableStart="@drawable/edit_12"
            android:layout_marginTop="@dimen/_5mdp"
            android:text="Review Text...."
            android:textColor="@color/icon_color"
            android:textSize="@dimen/_11font_mdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5mdp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:text="Public"
                android:paddingStart="@dimen/_5mdp"
                android:paddingTop="@dimen/_2mdp"
                android:paddingEnd="@dimen/_5mdp"
                android:paddingBottom="@dimen/_2mdp"
                android:background="@drawable/bg_red_red"
                android:textStyle="bold"
                android:textSize="@dimen/_11font_mdp"/>
<!--            <TextView-->
<!--                android:id="@+id/amount"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_weight="1"-->
<!--                android:text="â‚¹100/-"-->
<!--                android:gravity="end"-->
<!--                android:layout_gravity="center"-->
<!--                android:textColor="@color/main_color"-->
<!--                android:textSize="@dimen/_12font_mdp"-->
<!--                android:textStyle="bold" />-->
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/_85mdp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5mdp"
        android:src="@drawable/no_files"/>
</LinearLayout>