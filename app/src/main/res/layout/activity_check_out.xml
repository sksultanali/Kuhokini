<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@color/white"
    tools:context=".Activities.CheckOut">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darkGray">
        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/_10mdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/goBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:tint="@color/black"
                android:src="@drawable/arrow_back_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10mdp"
                android:layout_weight="1"
                android:text="Payment Details"
                android:textColor="@color/black"
                android:textSize="@dimen/_14font_mdp"
                android:textStyle="bold" />
        </LinearLayout>
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linearLayout2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/_5mdp"
                    android:layout_marginBottom="@dimen/_5mdp"
                    android:padding="@dimen/_10mdp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/blue_purple"
                            android:textStyle="bold"
                            android:textSize="@dimen/_11font_mdp"
                            android:text="Delivery To "/>
                        <TextView
                            android:id="@+id/changeAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_11font_mdp"
                            android:paddingTop="@dimen/_3mdp"
                            android:paddingBottom="@dimen/_3mdp"
                            android:paddingStart="@dimen/_8mdp"
                            android:paddingEnd="@dimen/_8mdp"
                            android:background="@drawable/back_white_border_grey_corner"
                            android:drawablePadding="@dimen/_5mdp"
                            android:drawableEnd="@drawable/edit_12"
                            android:text="Change"/>
                        <TextView
                            android:id="@+id/addAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_11font_mdp"
                            android:paddingTop="@dimen/_3mdp"
                            android:visibility="gone"
                            android:paddingBottom="@dimen/_3mdp"
                            android:paddingStart="@dimen/_8mdp"
                            android:paddingEnd="@dimen/_8mdp"
                            android:background="@drawable/back_white_border_grey_corner"
                            android:drawablePadding="@dimen/_5mdp"
                            android:drawableEnd="@drawable/add_14"
                            android:text="Add New Address"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/addressLayout"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:visibility="visible"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sk Sultan Ali"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11font_mdp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/linearDes" />
                        <TextView
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2mdp"
                            android:text="Mecheda, Purba Medinipur, Near Kolaghat Thermal Power Plant"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11font_mdp" />
                        <TextView
                            android:id="@+id/phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2mdp"
                            android:text="+91 9732824127"
                            android:textSize="@dimen/_11font_mdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="@dimen/_10mdp"
                            android:textColor="@color/blue_purple"
                            android:textStyle="bold"
                            android:textSize="@dimen/_11font_mdp"
                            android:text="Expected Arrival  "/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5mdp"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/arrivalTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="@dimen/_5mdp"
                                android:text="loading arrival time"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11font_mdp" />
                            <RadioGroup
                                android:id="@+id/mat_toggle"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:background="@drawable/pink_out_line"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/emailSecR"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/_1mdp"
                                    android:background="@drawable/toggle_widget_background"
                                    android:button="@null"
                                    android:gravity="center"
                                    android:paddingEnd="@dimen/_10mdp"
                                    android:paddingStart="@dimen/_10mdp"
                                    android:drawableEnd="@drawable/express"
                                    android:drawablePadding="@dimen/_5mdp"
                                    android:drawableTint="@drawable/text_color_selector"
                                    android:text="Express"
                                    android:checked="true"
                                    android:textSize="@dimen/_10font_mdp"
                                    android:textColor="@drawable/text_color_selector" />

                                <RadioButton
                                    android:id="@+id/googleSecR"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/_1mdp"

                                    android:background="@drawable/toggle_widget_background"
                                    android:button="@null"
                                    android:paddingEnd="@dimen/_10mdp"
                                    android:paddingStart="@dimen/_10mdp"
                                    android:textSize="@dimen/_10font_mdp"
                                    android:gravity="center"
                                    android:text="Regular"
                                    android:textColor="@drawable/text_color_selector" />
                            </RadioGroup>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/noAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5mdp"
                        android:orientation="horizontal">
                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/custom_alert" />
                        <TextView
                            android:id="@+id/titleText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No address found"
                            android:textColor="@color/red"
                            android:textStyle="bold"
                            android:layout_marginStart="@dimen/_5mdp"
                            android:textSize="@dimen/_11font_mdp"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5mdp"
                    android:background="@drawable/bg_white_round_corner"
                    android:elevation="@dimen/_5mdp"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Price Summery"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11font_mdp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Here is full price breakup"
                        android:textSize="@dimen/_11font_mdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/baseText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Base Price"
                            android:textSize="@dimen/_11font_mdp" />

                        <TextView
                            android:id="@+id/basePrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/rupee_16"
                            android:gravity="end"
                            android:text="0"
                            android:textSize="@dimen/_11font_mdp" />
                    </LinearLayout>

