                    <LinearLayout
                        android:id="@+id/deliverySegment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/gray" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Add, Delivery Charge (+)"
                                android:textSize="@dimen/_11font_mdp" />

                            <TextView
                                android:id="@+id/delivery"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/rupee_16"
                                android:drawableTint="@color/red"
                                android:gravity="end"
                                android:text="65"
                                android:textColor="@color/red"
                                android:textSize="@dimen/_11font_mdp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/couponSeg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/gray" />
                        <LinearLayout
                            android:id="@+id/codChargesLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Add, COD Charges (+)"
                                    android:textSize="@dimen/_11font_mdp" />

                                <TextView
                                    android:id="@+id/codAmountText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/rupee_16"
                                    android:drawableTint="@color/black"
                                    android:gravity="end"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_11font_mdp" />
                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/gray" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/couponApplied"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Less, Coupon applied (-)"
                                    android:textSize="@dimen/_11font_mdp" />

                                <TextView
                                    android:id="@+id/coupon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/rupee_16"
                                    android:drawableTint="@color/blue_purple"
                                    android:gravity="end"
                                    android:text="0"
                                    android:textColor="@color/blue_purple"
                                    android:textSize="@dimen/_11font_mdp" />
                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/gray" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/less_shipping_packing"
                                android:textSize="@dimen/_11font_mdp" />

                            <TextView
                                android:id="@+id/deliveryCharge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/rupee_16"
                                android:drawableTint="@color/black"
                                android:gravity="end"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11font_mdp" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Total amount to be paid"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11font_mdp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Included taxes and fees"
                                android:textSize="@dimen/_11font_mdp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/totalAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawableStart="@drawable/rupee_16"
                            android:gravity="end"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12font_mdp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5mdp"
                    android:layout_marginBottom="@dimen/_5mdp"
                    android:background="@color/white"
                    android:elevation="@dimen/_5mdp"
                    android:orientation="vertical"
                    android:padding="@dimen/_10mdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Payment Options"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11font_mdp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Choose payment option from below"
                                android:textSize="@dimen/_11font_mdp" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginStart="@dimen/_10mdp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="@dimen/_10mdp"
                        android:background="@color/gray" />

                    <RadioGroup
                        android:id="@+id/payToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="@dimen/_10mdp"
                        android:background="@drawable/pink_out_line"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/payOnline"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_1mdp"
                            android:background="@drawable/toggle_widget_background"
                            android:button="@null"
                            android:gravity="center"
                            android:paddingEnd="@dimen/_10mdp"
                            android:paddingStart="@dimen/_10mdp"
                            android:drawableEnd="@drawable/phonepe"
                            android:drawablePadding="@dimen/_5mdp"
                            android:drawableTint="@drawable/text_color_selector"
                            android:text="Pay Online"
                            android:checked="true"
                            android:textSize="@dimen/_10font_mdp"
                            android:textColor="@drawable/text_color_selector" />

                        <RadioButton
                            android:id="@+id/cod"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_1mdp"
                            android:background="@drawable/toggle_widget_background"
                            android:button="@null"
                            android:drawableEnd="@drawable/rupee_note"
                            android:drawablePadding="@dimen/_5mdp"
                            android:drawableTint="@drawable/text_color_selector"
                            android:paddingEnd="@dimen/_10mdp"
                            android:paddingStart="@dimen/_10mdp"
                            android:textSize="@dimen/_10font_mdp"
                            android:gravity="center"
                            android:text="Cash on Delivery"
                            android:textColor="@drawable/text_color_selector" />
                    </RadioGroup>

                    <TextView
                        android:id="@+id/cashExtra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="₹10 will be charged extra for Cash on Delivery!"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/_5mdp"
                        android:textSize="@dimen/_10font_mdp"
                        android:layout_gravity="center_vertical"/>

                    <LinearLayout
                        android:id="@+id/paymentIcons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_10mdp"
                            android:textSize="@dimen/_10font_mdp"
                            android:text="We accept all payment modes including"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_16mdp"
                                android:layout_height="@dimen/_16mdp"
                                app:tint="@color/purple"
                                android:layout_gravity="center"
                                android:src="@drawable/phonepe"/>
                            <ImageView
                                android:layout_width="@dimen/_20mdp"
                                android:layout_height="@dimen/_20mdp"
                                android:layout_marginStart="@dimen/_5mdp"
                                android:src="@drawable/google_pay"/>
                            <ImageView
                                android:layout_width="@dimen/_20mdp"
                                android:layout_height="@dimen/_20mdp"
                                android:layout_marginStart="@dimen/_5mdp"
                                android:src="@drawable/amazon"/>
                            <ImageView
                                android:layout_width="@dimen/_20mdp"
                                android:layout_height="@dimen/_20mdp"
                                android:layout_marginStart="@dimen/_5mdp"
                                android:src="@drawable/paytm"/>
                            <ImageView
                                android:layout_width="@dimen/_20mdp"
                                android:layout_height="@dimen/_20mdp"
                                android:layout_marginStart="@dimen/_5mdp"
                                android:src="@drawable/visa"/>
                            <ImageView
                                android:layout_width="@dimen/_20mdp"
                                android:layout_height="@dimen/_20mdp"
                                android:layout_marginStart="@dimen/_5mdp"
                                android:src="@drawable/mastercard"/>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/_5mdp"
                    android:layout_marginBottom="@dimen/_10mdp"
                    android:elevation="@dimen/_5mdp"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/back_white_border_grey_corner"
                        android:orientation="vertical"
                        android:padding="@dimen/_10mdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Have a coupon code?"
                                android:textColor="@color/black"
